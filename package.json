{
  "name": "@lastbrain/doc-next-ssr",
  "version": "0.1.4",
  "description": "Next.js documentation renderer with SSR and client enhancement",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],

   "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs",
      "types": "./dist/client.d.ts"
    },
    "./ssr": {
      "import": "./dist/ssr.mjs",
      "require": "./dist/ssr.cjs",
      "types": "./dist/ssr.d.ts"
    }
  },

  "scripts": {
    "build": "tsup && node scripts/make-client-entry.cjs",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": "^15.0.0",
    "framer-motion": "^10 || ^11 || ^12"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}
